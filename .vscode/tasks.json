{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "pip install --upgrade pip flit && pip install -e '.[dev]'",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Install Package (Editable)",
            "type": "shell",
            "command": "pip install -e .",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Debug Tests",
            "type": "shell",
            "command": "python debug_scraper.py",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Pytest",
            "type": "shell",
            "command": "python -m pytest tests/ -v",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Test CLI Help",
            "type": "shell",
            "command": "webscraper --help",
            "group": "test",
            "dependsOn": "Install Package (Editable)"
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "black .",
            "group": "build"
        },
        {
            "label": "Build Package",
            "type": "shell",
            "command": "python -m build",
            "group": "build"
        }
    ]
}